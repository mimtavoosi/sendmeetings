@model SendReceiptsDemo.Models.DefaultDataVM

@{
    ViewData["Title"] = "اطلاعات پیش فرض";
     Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
<div class="row">
    <div class="col-lg-6">
         <h4 class="header-title m-t-0 m-b-30">تغییر اطلاعات پیش فرض</h4>
                @if (ViewBag.Success == true)
                {
                    <div class="grealert">
                        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                        اطلاعات پیش فرض ذخیره شد
                    </div>

                    <br />
                }
        <form  class="form-horizontal" asp-action="SetSiteDefaultData" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="DefaultBlockerConditions" class="control-label"></label>
                        <textarea asp-for="DefaultBlockerConditions" class="form-control"></textarea>
                <br /><span asp-validation-for="DefaultBlockerConditions" class="text-danger"></span>  
            </div>
              <div class="form-group">
                <label asp-for="DefaultGuarantorsConditions" class="control-label"></label>
                        <textarea asp-for="DefaultGuarantorsConditions" class="form-control"></textarea>
                <br /><span asp-validation-for="DefaultGuarantorsConditions" class="text-danger"></span>  
            </div>
           <button type="submit" class="savebtn btn btn-success btn-rounded w-md waves-effect waves-light m-b-5">ذخیره</button>
        </form>
    </div>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
