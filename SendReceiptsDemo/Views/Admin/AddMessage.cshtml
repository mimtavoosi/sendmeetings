@model SendReceiptsDemo.Models.SendMessageVM

@{
    ViewData["Title"] = "ارسال پیامک به " + ViewBag.ParticipantName;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-sm-12">
    <div class="card-box">
<div class="row">
    <div class="col-lg-6">
        <h4 class="header-title m-t-0 m-b-30">ارسال پیامک به @ViewBag.ParticipantName</h4>
        <form  class="form-horizontal" asp-action="AddMessage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="MobileNumber" class="control-label"></label>
                <input asp-for="MobileNumber" value="@ViewBag.ParticipantMob" readonly class="form-control" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="MessageText" class="control-label"></label>
                 <textarea asp-for="MessageText" class="form-control" ></textarea>
                <span asp-validation-for="MessageText" class="text-danger"></span>
            </div>
             <button type="submit" class="savebtn btn btn-success btn-rounded w-md waves-effect waves-light m-b-5">ارسال</button>
            <a asp-action="ShowMessages" asp-route-pageid="@ViewBag.MessagePageID" type="button" class="savebtn btn btn-danger btn-rounded w-md waves-effect waves-light m-b-5">بازگشت</a>
        </form>
    </div>
</div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
