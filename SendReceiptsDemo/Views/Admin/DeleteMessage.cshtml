@model SendReceiptsDemo.Models.Message

@{
    ViewData["Title"] = "حذف پیامک ارسال شده به " + @Model.Customer.FullName;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>آیا از حذف پیامک ارسال شده به @Model.Customer.FullName اطمینان دارید؟</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.MobileNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.MobileNumber)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MessageText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MessageText)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SentDate)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SentState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SentState)
        </dd>
    </dl>
    
    <form asp-action="DeleteMessage">
        <input type="hidden" asp-for="MessageId" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-action="ShowMessages" asp-route-pageid="@ViewBag.MessagePageID">بازگشت</a>
    </form>
</div>
